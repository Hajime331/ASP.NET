@model IEnumerable<MyModel_CodeFirst.Models.ReBook>
@{
	Layout = null;
}
@* //4.3.3 將Delete View重新排版並加入刪除回覆留言的按鈕 *@
@if (Model.Count() != 0)
{
	<div class="bg-danger-subtle">
		@foreach (var item in Model)
		{
			<div class="text-truncate">@Html.DisplayFor(modelItem => item.Description)</div>
			<div class="text-end">@Html.DisplayFor(modelItem => item.Author) | @Html.DisplayFor(modelItem => item.CreatedDate) | <button class="btn btn-outline-danger btn-sm" onclick="delReBook('@item.ReBookID')">刪除</button></div>
			<hr />
		}
	</div>
}

